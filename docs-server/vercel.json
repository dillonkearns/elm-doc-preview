{
  "buildCommand": "bash scripts/build.sh",
  "rewrites": [
    {
      "source": "/:owner/:repo/:ref/docs.json",
      "destination": "/api/docs?owner=:owner&repo=:repo&ref=:ref"
    },
    {
      "source": "/:owner/:repo/:ref/preview.json",
      "destination": "/api/preview?owner=:owner&repo=:repo&ref=:ref"
    }
  ],
  "functions": {
    "api/docs.ts": {
      "includeFiles": "{node_modules/elm,elm-home-seed}/**",
      "maxDuration": 60,
      "memory": 1024
    },
    "api/preview.ts": {
      "includeFiles": "{node_modules/elm,elm-home-seed}/**",
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "headers": [
    {
      "source": "/(.*)/docs.json",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, OPTIONS" }
      ]
    },
    {
      "source": "/(.*)/preview.json",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, OPTIONS" }
      ]
    }
  ]
}
